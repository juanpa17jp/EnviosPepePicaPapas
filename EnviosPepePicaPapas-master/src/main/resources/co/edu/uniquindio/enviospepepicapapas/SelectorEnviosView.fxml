<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.enviospepepicapapas.Controllers.SelectorEnviosController"
            prefHeight="600.0" prefWidth="900.0"
            style="-fx-background-color: #000000;">

    <!-- Header -->
    <top>
        <VBox style="-fx-background-color: #FFD700;">
            <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-padding: 20;">
                <Button fx:id="btnVolver" text="Volver" onAction="#onVolver"
                        style="-fx-background-color: #000000; -fx-text-fill: #FFD700; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                <Label text="SELECCIONAR ENVIO PARA PAGAR" style="-fx-text-fill: #000000; -fx-font-weight: bold;">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
            </HBox>
        </VBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox spacing="20.0" style="-fx-background-color: #000000;">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
            </padding>

            <!-- Instrucciones -->
            <Label text="Seleccione el envio que desea pagar de la lista:"
                   style="-fx-text-fill: #FFD700; -fx-font-size: 16px;"/>

            <!-- Tabla de Envíos -->
            <TableView fx:id="tablaEnvios" prefHeight="400.0"
                       style="-fx-background-color: #1A1A1A; -fx-control-inner-background: #1A1A1A;">
                <columns>
                    <TableColumn fx:id="colId" text="ID"  style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colOrigen" text="Origen" prefWidth="200.0"/>
                    <TableColumn fx:id="colPeso" text="Peso (kg)" prefWidth="100.0" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colCosto" text="Costo Total" prefWidth="150.0" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="150.0" style="-fx-alignment: CENTER;"/>
                </columns>
            </TableView>

            <!-- Botón de acción -->
            <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="btnPagarSeleccionado" text="Proceder al Pago" prefWidth="250.0" prefHeight="50.0"
                        onAction="#onPagarSeleccionado"
                        style="-fx-background-color: #FFD700; -fx-text-fill: #000000; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 10;"/>
            </HBox>

        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #1A1A1A; -fx-padding: 15;">
            <Label text="Seleccione un envio de la tabla y haga clic en Proceder al Pago"
                   style="-fx-text-fill: #FFD700; -fx-font-size: 12px;"/>
        </HBox>
    </bottom>

</BorderPane>
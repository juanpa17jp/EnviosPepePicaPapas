<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.enviospepepicapapas.Controllers.AppViewController"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #000000;">

    <!-- Header -->
    <top>
        <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #FFD700; -fx-padding: 20;">
            <Label text="RAPILANDIA EXPRESS" style="-fx-text-fill: #000000; -fx-font-weight: bold;">
                <font>
                    <Font name="System Bold" size="28.0"/>
                </font>
            </Label>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox alignment="CENTER" spacing="30.0">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
            </padding>

            <Label text="Sistema de Gestión de Envíos" style="-fx-text-fill: #FFD700;">
                <font>
                    <Font size="20.0"/>
                </font>
            </Label>

            <!-- Menu Buttons -->
            <VBox spacing="15.0" alignment="CENTER">
                <Button fx:id="btnRegistrarEnvio" text="Registrar Nuevo Envio" prefWidth="300.0" prefHeight="50.0" onAction="#onRegistrarEnvio"
                        style="-fx-background-color: #FFD700; -fx-text-fill: #000000; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;"/>

                <Button fx:id="btnHistorial" text="Historial de Envios" prefWidth="300.0" prefHeight="50.0" onAction="#onHistorialEnvios"
                        style="-fx-background-color: #FFD700; -fx-text-fill: #000000; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;"/>

                <Button fx:id="btnPagos" text="Gestion de Pagos" prefWidth="300.0" prefHeight="50.0" onAction="#onGestionPagos"
                        style="-fx-background-color: #FFD700; -fx-text-fill: #000000; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;"/>

                <Button fx:id="btnUsuarios" text="Gestion de Usuarios" prefWidth="300.0" prefHeight="50.0" onAction="#onGestionUsuarios"
                        style="-fx-background-color: #FFD700; -fx-text-fill: #000000; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;"/>

                <Button fx:id="btnNotificaciones" text="Notificaciones" prefWidth="300.0" prefHeight="50.0" onAction="#onNotificaciones"
                        style="-fx-background-color: #FFD700; -fx-text-fill: #000000; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10;"/>
            </VBox>
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #1A1A1A; -fx-padding: 15;">
            <Label text="© 2024 Rapilandia Express" style="-fx-text-fill: #FFD700;">
                <font>
                    <Font size="12.0"/>
                </font>
            </Label>
            <Separator orientation="VERTICAL" prefHeight="20.0"/>
            <Label text="Sistema de Gestión v1.0" style="-fx-text-fill: #FFD700;">
                <font>
                    <Font size="12.0"/>
                </font>
            </Label>
        </HBox>
    </bottom>

</BorderPane>